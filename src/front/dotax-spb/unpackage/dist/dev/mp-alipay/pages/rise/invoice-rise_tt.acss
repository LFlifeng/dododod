.tt_info {
  margin-top: 20rpx;
  background-color: #fff;
  border-top: 1px solid #fff;
  border-bottom: 1px solid #fff;
}
.tt_cont {
  width: 688rpx;
  height: 128rpx;
  background-color: #f4f4f4;
  margin: 32rpx;
  border-radius: 8rpx;
  clear: both;
}
.cont {
  float: left;
  margin-left: 24rpx;
  width: 520rpx;
}
.cont .cont_title {
  font-size: 28rpx;
  color: #666;
  margin-top: 24rpx;
}
.cont .cont_title text {
  display: inline-block;
  vertical-align: middle;
}
.cont .cont_title view:first-child {
  display: inline-block;
  vertical-align: middle;
  width: 60%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.cont .cont_title text:last-child {
  margin-left: 10rpx;
  color: #c91702;
}
.cont .cont_code {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
.copy {
  float: right;
  width: 120rpx;
  height: 60rpx;
  background-image: -webkit-repeating-linear-gradient(left, #3D94FF 50%, #2782F3 50%);
  background-image: repeating-linear-gradient(to right, #3D94FF 50%, #2782F3 50%);
  font-size: 28rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  margin-right: 24rpx;
  margin-top: 38rpx;
}
.ci-foot {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  border-top: 1rpx solid #fff;
  border-bottom: 1rpx solid #fff;
  background-color: #FFFFFF;
}
.ci-foot .foot-section {
    padding: 0rpx 32rpx;
    margin: 40rpx 0;
}
.ci-foot .foot-section button {
      width: 100%;
      margin: 0rpx;
      height: 96rpx;
      line-height: 96rpx;
      background-color: #3D94FF;
      border-radius: 8rpx;
      font-size: 32rpx;
}

