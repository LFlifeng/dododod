.ci-main {
  background-color: #FFFFFF;
}
.ci-body {
  position: absolute;
  bottom: 0rpx;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  padding: 0rpx 0rpx 120rpx 0rpx;
}
.ci-body .body-section {
    padding: 0rpx 30rpx;
}
.ci-body .body-section .title-block {
      height: 80rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      padding: 0rpx 10rpx;
}
.ci-body .body-section .title-block .label {
        color: #333333;
        font-size: 28rpx;
}
.ci-body .body-section .title-block .value {
        color: #646a73;
        font-size: 32rpx;
}
.ci-body .body-section .image-block {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: start;
      -webkit-justify-content: flex-start;
              justify-content: flex-start;
      -webkit-flex-wrap: wrap;
              flex-wrap: wrap;
      -webkit-box-orient: horizontal;
      -webkit-box-direction: normal;
      -webkit-flex-direction: row;
              flex-direction: row;
      padding: 15rpx 0rpx;
}
.ci-body .body-section .image-block .image-item {
        width: 210rpx;
        height: 210rpx;
        background-color: #ccc;
        margin: 10rpx 10rpx;
        position: relative;
        text-align: center;
        line-height: 210rpx;
}
.ci-body .body-section .image-block .image-item .icon {
          position: absolute;
          top: 10rpx;
          right: 10rpx;
          width: 24rpx;
          height: 24rpx;
          z-index: 100;
}
.ci-body .body-section .image-block .image-item .photo {
          width: 210rpx;
          height: 210rpx;
}
.ci-body .body-section .image-block .add {
        background-color: #000;
        opacity: 0.4;
}
.ci-body .body-section .image-block .add .add_img {
          width: 98rpx;
          height: 98rpx;
          margin-top: 60rpx;
}
.ci-body .body-section .image-block .a {
        background-color: #fff;
}
.ci-foot {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 120rpx;
}
.ci-foot .foot-section {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    height: 120rpx;
    padding: 0rpx 40rpx;
}
.ci-foot .foot-section button {
      width: 100%;
      margin: 0rpx;
      height: 80rpx;
      line-height: 80rpx;
}
.prog-body {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding: 0rpx 30rpx 200rpx 30rpx;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.prog-body .prog-cont {
    font-size: 36rpx;
    font-weight: 600;
    color: #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.btn .camera {
  width: 95%;
  height: 132rpx;
  background-color: #fff;
  color: #1f2329;
  font-size: 32rpx;
  line-height: 132rpx;
  text-align: center;
  margin: 0 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.btn .alum {
  height: 264rpx;
}
.btn .alum .camera_ {
    height: 132rpx;
    color: #1f2329;
    font-size: 32rpx;
    line-height: 132rpx;
}
.btn .alum .camera_:last-child {
    border-top: 1rpx solid #ccc;
}

